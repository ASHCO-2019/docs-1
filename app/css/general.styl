
global-reset();

body
	font-size: 16px
	background-color: #eee
	line-height: 1.4
	color: #333
	sansSerif()

h1
	font-size: 36px

h2
	font-size: 30px

h3
	font-size: 24px

h4
	font-size: 18px

h1, h2, h3
	margin-top: 20px
	margin-bottom: 10px

h4, h5, h6
	margin-top: 10px
	margin-bottom: 10px

h1, h2, h3, h4, h5, h6
	sansSerif()
	font-weight: 500
	line-height: 1.1
	color: inherit

.page-header
	padding-bottom: 9px
	margin: 40px 0 20px
	border-bottom: 1px solid #999

a
	color: #428bca
	text-decoration: none
	&:hover, &:active
		outline: 0
	&:hover, &:focus
		color: #2a6496
		text-decoration: underline

hr
	border-bottom: #999
	margin-top: 20px
	margin-bottom: 20px

p
	margin-bottom: 10px;

ul
	display: block
	list-style-type: disc
	-webkit-margin-before: 1em
	-webkit-margin-after: 1em
	-webkit-margin-start: 0px
	-webkit-margin-end: 0px
	-webkit-padding-start: 40px

ol
	list-style-type: decimal
	li
		margin-left: 35px;

ul, ol
	margin-top: 0
	margin-bottom: 10px

li
	display: list-item;
	text-align: -webkit-match-parent;

code, pre
	color: #333;
	background-color: #f5f5f5;
	border-radius: 4px;

code
	padding: 2px 4px;
	font-size: 90%;
	white-space: nowrap;

pre
	display: block
	padding: 9.5px
	margin: 0 0 10px
	font-size: 13px
	word-break: break-all
	word-wrap: break-word
	border: 1px solid #ccc

pre code
	padding: 0
	font-size: inherit
	color: inherit
	white-space: pre-wrap
	background-color: transparent
	border-radius: 0

code
	monospace()

strong
	font-weight: 700

.pull-right
	float: right !important

.table
	border: 1px solid #ddd
	width: 100%
	max-width: 100%
	margin-bottom: 20px
	> thead > tr > th
		border: 1px solid #ddd;
		border-bottom-width: 2px;
		vertical-align: bottom
		border-bottom: 2px solid #ddd
		padding: 8px
		border-top: 0
		font-weight: 700
	> tbody > tr > td
		border: 1px solid #ddd
		vertical-align: bottom
		padding: 8px;
		border-top: 0
	> tbody > tr:nth-child(odd) > td
		background-color: #f9f9f9

blockquote
	padding: 5px 20px
	margin: 0 0 20px
	border-left: 5px solid #DDD

.panel
	margin-bottom: 20px
	background-color: #FFF
	border-radius: 4px
	-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05)
	box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05)
	border: 1px solid rgba(0, 0, 0, 0)
	&.panel-add
		border-color: #D6E9C6
		background-color: #DFF0D8
		color: #468847
	&.panel-update
		border-color: #BCE8F1
		background-color: #D9EDF7
		color: #3A87AD
	&.panel-update
		border-color: #BCE8F1
		background-color: #D9EDF7
		color: #3A87AD
	> pre
		margin: 0
	> .panel-title
		padding: 10px 15px
		border-bottom: 1px solid rgba(0, 0, 0, 0)
		border-top-right-radius: 3px
		border-top-left-radius: 3px
		margin-top: 0
		margin-bottom: 0
		font-size: 16px

p > img
	max-width: 100%

@media (min-width: 992px)
	.row
		display: flex;
		.col-md-3, .col-md-6, .col-md-9, .col-md-12
			padding-left: 15px
			padding-right: 15px
		.col-md-3
			flex: 3
		.col-md-6
			flex: 6
		.col-md-9
			flex: 9
		.col-md-12
			flex: 12
